@model CST_326TempoTunes.Models.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Login";
    ViewData["BodyClass"] = "login-background";
}

<div class="login-wrapper d-flex align-items-start justify-content-center min-vh-100">
    <div class="login-panel custom-modal-style shadow p-4">
        <h2 class="mb-4">Login</h2>

        <div asp-validation-summary="All" class="text-danger small"></div>

        <form asp-action="Index"
              asp-controller="Login"
              method="post"
              class="d-grid gap-3">

            <input asp-for="Username" class="form-control" placeholder="Username" required />
            <span asp-validation-for="Username" class="text-danger small"></span>

            <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
            <span asp-validation-for="Password" class="text-danger small"></span>

            <div class="d-flex justify-content-end gap-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-pink">Login</button>
            </div>
        </form>
    </div>
</div>

<img src="/lib/img/login.png"
     alt="Decorative playlist footer"
     class="sticky-footer-image" />
